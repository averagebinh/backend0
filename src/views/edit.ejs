<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update an user</title>
    <link rel="stylesheet" type="text/css" href="/css/styles.css" />
  </head>

  <body>
    <div class="topnav">
      <a href="/">Home</a>
      <a href="/update-user">Update users</a>
    </div>
    <div class="form-add-new">
      <form action="/update-user" method="post">
        <fieldset>
          <legend>Update an user:</legend>
          <div class="input-group d-none">
            <label>Id:</label>
            <input type="text" name="userId" value="<%= userEdit.id%>" />
          </div>
          <div class="input-group">
            <label>Email:</label>
            <input type="email" name="email" value="<%= userEdit.email%>" />
          </div>
          <div class="input-group">
            <label>Name:</label>
            <input type="text" name="myName" value="<%= userEdit.name %>" />
          </div>

          <div class="input-group">
            <label>City:</label>
            <input
              type="text"
              name="city"
              value="<%= userEdit.city %>"
            /><br /><br />
          </div>
          <div>
            <button>Save</button>
          </div>
        </fieldset>
      </form>
    </div>
  </body>
</html>
